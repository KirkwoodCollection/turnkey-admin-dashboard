# Admin Dashboard Environment Variables Example
# Copy this file to .env.development or .env.production and fill in actual values
# IMPORTANT: Keep actual credentials in GitHub Secrets for production builds

# ======================
# API Configuration
# ======================

# Development: Use proxy through Vite dev server
VITE_API_BASE_URL=/api/v1

# Production: Direct API URLs
# VITE_API_BASE_URL=https://api.turnkeyhms.com

# WebSocket URLs for real-time updates
VITE_WS_URL=wss://api.turnkeyhms.com/websocket/ws
VITE_WEBSOCKET_URL=wss://api.turnkeyhms.com/websocket/ws

# Events API URL (leave empty for development to use proxy)
VITE_EVENTS_API_URL=

# ======================
# Authentication
# ======================

# Firebase Configuration (required for user authentication)
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Gateway API Authentication (for admin endpoints)
# Get this from Infrastructure team
VITE_EVENTS_API_KEY=your-internal-api-key

# ======================
# Analytics & Monitoring
# ======================

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=your-sentry-dsn-here

# Hotjar User Analytics (optional)
VITE_HOTJAR_ID=your-hotjar-id-here

# ======================
# App Configuration
# ======================

VITE_APP_NAME=TurnkeyHMS Admin Dashboard
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ======================
# Feature Flags
# ======================

VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_DEBUG_MODE=false

# ======================
# Security
# ======================

VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true

# ======================
# Performance
# ======================

VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true

# ======================
# Build-time Variables
# ======================

# Version is auto-generated in CI/CD pipeline
# VITE_VERSION=auto-generated-in-ci

# ======================
# GitHub Secrets Setup
# ======================

# For production builds, set these in GitHub repository secrets:
# - FIREBASE_PROJECT_ID
# - VITE_FIREBASE_API_KEY
# - FIREBASE_AUTH_DOMAIN
# - FIREBASE_STORAGE_BUCKET
# - FIREBASE_MESSAGING_SENDER_ID
# - FIREBASE_APP_ID
# - GA_MEASUREMENT_ID
# - GCP_SA_KEY (service account for deployment)
# - GCP_PROJECT (Google Cloud project ID)

# ======================
# Development Notes
# ======================

# Local development uses Vite proxy to forward /api/v1/* to production API
# This avoids CORS issues and allows testing with real data
# WebSocket connections go directly to production WSS endpoint