# TurnkeyHMS Admin Dashboard Configuration

# Development Environment
NODE_ENV=development
VITE_APP_ENV=development

# API Configuration - Point to local services for development
VITE_API_BASE_URL=http://localhost:8001
VITE_EVENTS_API_URL=http://localhost:8000
VITE_WEBSOCKET_URL=ws://localhost:8003/websocket/ws

# Analytics Service Configuration
VITE_ANALYTICS_SERVICE_URL=http://localhost:8001/api/v1
VITE_ANALYTICS_API_KEY=your-analytics-api-key-here  # Get from Analytics team
VITE_ANALYTICS_DESTINATIONS_ENDPOINT=/analytics/destinations
VITE_ANALYTICS_HOTELS_ENDPOINT=/analytics/hotels
VITE_ANALYTICS_FUNNEL_ENDPOINT=/analytics/funnel
VITE_ANALYTICS_METRICS_ENDPOINT=/analytics/metrics
VITE_ANALYTICS_EVENTS_ENDPOINT=/analytics/events
VITE_ANALYTICS_ACTIVE_USERS_ENDPOINT=/analytics/active-users

# Events Service Configuration
VITE_EVENTS_SERVICE_URL=https://api.turnkeyhms.com/api/v1
VITE_EVENTS_INTERNAL_API_KEY=your-events-internal-api-key-here  # Get from Infra team
VITE_EVENTS_SESSIONS_ENDPOINT=/admin/sessions
VITE_EVENTS_SESSION_STATS_ENDPOINT=/admin/sessions/stats
VITE_EVENTS_ACTIVE_COUNT_ENDPOINT=/admin/sessions/active-count

# Authentication Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-firebase-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-firebase-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:your-app-id

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# UI Configuration
VITE_APP_TITLE=TurnkeyHMS Admin Dashboard
VITE_APP_DESCRIPTION=Real-time booking analytics and session management
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_TIMEZONE=UTC

# Pagination & Performance
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=500
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000
VITE_API_TIMEOUT=30000
VITE_CACHE_DURATION=300000

# Chart & Visualization Settings
VITE_CHART_ANIMATION_DURATION=750
VITE_CHART_THEME=light
VITE_ENABLE_CHART_EXPORTS=true
VITE_MAX_CHART_DATA_POINTS=1000

# Notification Settings
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000
VITE_ALERT_SOUND_ENABLED=false

# Security Settings
VITE_SESSION_TIMEOUT=3600000
VITE_IDLE_TIMEOUT=1800000
VITE_CSRF_PROTECTION=true

# Development Tools
VITE_DEV_TOOLS_ENABLED=true
VITE_REDUX_DEVTOOLS=true
VITE_ERROR_REPORTING=console

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_METRIC_COLLECTION_INTERVAL=60000

# Data Refresh Intervals (milliseconds)
VITE_DASHBOARD_REFRESH_INTERVAL=30000
VITE_SESSIONS_REFRESH_INTERVAL=15000
VITE_ACTIVE_USERS_REFRESH_INTERVAL=10000
VITE_STATS_REFRESH_INTERVAL=60000