{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [],
  "rules": {},
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "*.js",
    "vite.config.*",
    "jest.config.*",
    "tests/",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}