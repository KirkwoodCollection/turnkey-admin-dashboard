# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values

project_id                  = "your-gcp-project-id"
region                      = "us-central1"
environment                 = "production"
grafana_image              = "gcr.io/your-project-id/grafana:latest"
grafana_admin_password     = "strong-random-password-here"
google_oauth_client_id     = "your-oauth-client-id.apps.googleusercontent.com"
google_oauth_client_secret = "your-oauth-client-secret"
allowed_domains            = "yourdomain.com"
api_gateway_service_account = "api-gateway-sa@your-project-id.iam.gserviceaccount.com"
analytics_api_url          = "https://api.turnkeyhms.com/v1/analytics"
min_instances              = 1
max_instances              = 10
cpu                        = "2"
memory                     = "2Gi"